<!-- index.wxml -->
<view class="container">
  <image class="logo" src="../../asset/imgs/logo2.png" mode="aspectFit"></image>

  <view class="button-container">
    <view class="button" bindtap="navigateToSchedule">
      <image src="../../asset/imgs/course.png" style="width: 40px; height: 40px;"></image>
      <text class="button-text">查课表</text>
    </view>

    <view class="button" bindtap="navigateToFocus">
      <image src="../../asset/imgs/score.png" style="width: 40px; height: 40px;"></image>
      <text class="button-text">查专注</text>
    </view>

    <view class="button" bindtap="navigateToCheckIn">
      <image src="../../asset/imgs/attendance.png" style="width: 40px; height: 40px;"></image>
      <text class="button-text">查签到</text>
    </view>
  </view>
</view>
