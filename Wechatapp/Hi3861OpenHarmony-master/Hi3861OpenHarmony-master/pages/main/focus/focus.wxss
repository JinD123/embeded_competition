.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.picker-icon {
  width: 64px;
  height: 64px;
}

.sub-page {
  margin-top: 20px;
}

.sub-page-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 10px;
}

.table-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #ccc;
}

.icon {
  width: 40px;
  height: 40px;
}

.table-type {
  flex: 1;
  margin-left: 10px;
}

.table-value {
  flex: 1;
  text-align: right;
}

.analysis {
  font-size: 16px;
  font-weight: bold;
  margin-top: 10px;
}

.bad {
  color: red;
}

.average {
  color: yellow;
}

.good {
  color: green;
}
